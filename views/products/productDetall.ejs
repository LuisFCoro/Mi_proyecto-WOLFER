<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WOLFER | Inicio</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/productDetall.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>
<body>
  <%- include('../partials/header') %>



















<main class="detalle-wrapper">
  <section class="detalle-card">
    <div class="detalle-imagen-wrapper">
      <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" class="detalle-imagen" />
    </div>

    <div class="detalle-info">
      <h1 class="detalle-nombre"><i class="fas fa-box-open"></i> <%= producto.nombre %></h1>
      <p class="detalle-precio"> $<%= producto.precio %></p>
      <p class="detalle-descripcion"><i class="fas fa-align-left"></i> <%= producto.descripcion || 'No hay descripción disponible' %></p>
      <p><i class="fas fa-tags"></i> <strong>Marca:</strong> <%= producto.marca %></p>
      <p><i class="fas fa-layer-group"></i> <strong>Colección:</strong> <%= producto.coleccion %></p>
      <p><i class="fas fa-hashtag"></i> <strong>Etiquetas:</strong> <%= Array.isArray(producto.etiquetas) ? producto.etiquetas.join(', ') : 'Sin etiquetas' %></p>

      <button class="detalle-btn"><i class="fas fa-cart-plus"></i> Añadir al carrito</button>
    </div>
  </section>
</main>















  <%- include('../partials/footer') %>







    <script>
      function toggleMenu() {
        const submenu = document.getElementById('submenu');
        submenu.style.display = submenu.style.display === 'block' ? 'none' : 'block';
      }
    
      // Ocultar el menú si se hace clic afuera
      document.addEventListener('click', function(event) {
        const menu = document.querySelector('.menu-cuenta');
        const submenu = document.getElementById('submenu');
    
        if (!menu.contains(event.target)) {
          submenu.style.display = 'none';
        }
      });
    </script>
    



</body>
</html>
