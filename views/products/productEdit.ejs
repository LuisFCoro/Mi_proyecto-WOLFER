<h1>Editar Producto</h1>

<form action="/products/update/<%= producto.id %>" method="POST">
    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" value="<%= producto.nombre %>" required>

    <label for="precio">Precio:</label>
    <input type="number" id="precio" name="precio" value="<%= producto.precio %>" required>

    <label for="imagen">Imagen:</label>
    <input type="text" id="imagen" name="imagen" value="<%= producto.imagen %>">

    <label for="descripcion">Descripción:</label>
    <textarea id="descripcion" name="descripcion"><%= producto.descripcion %></textarea>

    <label for="marca">Marca:</label>
    <input type="text" id="marca" name="marca" value="<%= producto.marca %>">

    <label for="etiquetas">Etiquetas (separadas por coma):</label>
    <input type="text" id="etiquetas" name="etiquetas" value="<%= producto.etiquetas ? producto.etiquetas.join(', ') : '' %>">

    <label for="coleccion">Colección:</label>
    <input type="text" id="coleccion" name="coleccion" value="<%= producto.coleccion %>">

    <button type="submit">Actualizar Producto</button>

    <!-- Botón Cancelar -->
    <a href="/products"><button>Cancelar</button></a>

    <!-- Formulario para Eliminar -->
    <form action="/products/delete/<%= producto.id %>" method="POST" style="margin-top: 10px;">
    <button type="submit" onclick="return confirm('¿Estás seguro que querés eliminar este producto?')">
        Eliminar Producto
    </button>
    </form>

</form>
